<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">


    <EditText
        android:id="@+id/cAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cName"
        android:layout_below="@+id/cName"
        android:layout_marginTop="17dp"
        android:hint="Amount"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cAmount"
        android:layout_below="@+id/cAmount"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:hint="Offense Description"
        android:inputType="textMultiLine"
        android:minLines="6" />

    <EditText
        android:id="@+id/cName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:hint="Offense Name"
        android:inputType="textPersonName" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="69dp"
        android:id="@+id/cBtnCancel"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cDesc" />

    <Button
        android:text="Apply"
        android:id="@+id/cBtnOkay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cBtnCancel"
        android:layout_toRightOf="@+id/cBtnCancel"/>

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cName"
        android:layout_marginTop="13dp"
        android:id="@+id/textView" />

    <TextView
        android:text="Amount $"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cName"
        android:layout_alignStart="@+id/cAmount"
        android:id="@+id/textView2" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cAmount"
        android:layout_alignStart="@+id/cAmount"
        android:id="@+id/textView4" />

</RelativeLayout>
